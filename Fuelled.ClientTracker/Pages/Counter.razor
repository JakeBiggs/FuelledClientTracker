@page "/counter"

<PageTitle>Tree Counter</PageTitle>

<h1>Tree Counter</h1>

<p role="status">Current tree count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
