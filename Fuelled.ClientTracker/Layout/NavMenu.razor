<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid justify-content-center">
        <a class="navbar-brand" href="">
            <img src="/images/logo.png" alt="Fuelled ClientTracker Logo" style="height: 30px;" />
        </a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">


        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/clients">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Client Tracker
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/insights">
                <span class="bi bi-graph-up-arrow-nav-menu" aria-hidden="true"></span> Data Insights
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link displayflex align-items-center" href="/eco-tracker">
                <span class="bi bi-tree-nav-menu" aria-hidden="true"></span> Eco-Tracker
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
